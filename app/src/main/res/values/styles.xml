<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ==================== TEXT STYLES ==================== -->

    <style name="TextAppearance.Sakta.Display" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextAppearance.Sakta.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.Sakta.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Sakta.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Sakta.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="TextAppearance.Sakta.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Sakta.Label" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Sakta.Caption" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- ==================== BUTTON STYLES ==================== -->

    <!-- Primary Button (filled, like in Figma) -->
    <style name="Widget.Sakta.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">52dp</item>
        <item name="cornerRadius">14dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Sakta.TitleSmall</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Success Button (green) -->
    <style name="Widget.Sakta.Button.Success" parent="Widget.Sakta.Button">
        <item name="backgroundTint">@color/success</item>
    </style>

    <!-- Danger Button (red) -->
    <style name="Widget.Sakta.Button.Danger" parent="Widget.Sakta.Button">
        <item name="backgroundTint">@color/error</item>
    </style>

    <!-- Secondary Button (dark surface) -->
    <style name="Widget.Sakta.Button.Secondary" parent="Widget.Sakta.Button">
        <item name="backgroundTint">@color/surface_elevated_dark</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Outlined Button -->
    <style name="Widget.Sakta.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">52dp</item>
        <item name="cornerRadius">14dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Sakta.TitleSmall</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/border</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="rippleColor">@color/primary_container</item>
    </style>

    <!-- Text Button -->
    <style name="Widget.Sakta.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:minHeight">48dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Sakta.TitleSmall</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Small Action Button (like in cards) -->
    <style name="Widget.Sakta.Button.Small" parent="Widget.Material3.Button">
        <item name="android:minHeight">36dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/surface_elevated_dark</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- SOS Button (special large red button) -->
    <style name="Widget.Sakta.Button.SOS" parent="Widget.Material3.Button">
        <item name="android:minHeight">56dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/sos_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="iconSize">24dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
    </style>

    <!-- ==================== CARD STYLES ==================== -->

    <!-- Base Card -->
    <style name="Widget.Sakta.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/surface_dark</item>
        <item name="contentPadding">16dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Card with border -->
    <style name="Widget.Sakta.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">@color/border</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@color/surface_dark</item>
        <item name="cardElevation">0dp</item>
    </style>

    <!-- Status Card (Safe - green) -->
    <style name="Widget.Sakta.Card.Safe" parent="Widget.Sakta.Card">
        <item name="cardBackgroundColor">@color/card_safe_bg</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/card_safe_border</item>
    </style>

    <!-- Status Card (Warning - orange) -->
    <style name="Widget.Sakta.Card.Warning" parent="Widget.Sakta.Card">
        <item name="cardBackgroundColor">@color/card_warning_bg</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/card_warning_border</item>
    </style>

    <!-- Status Card (Danger - red) -->
    <style name="Widget.Sakta.Card.Danger" parent="Widget.Sakta.Card">
        <item name="cardBackgroundColor">@color/card_danger_bg</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/card_danger_border</item>
    </style>

    <!-- Action Card (like "Безопасный маршрут" button) -->
    <style name="Widget.Sakta.Card.Action" parent="Widget.Sakta.Card">
        <item name="cardBackgroundColor">@color/primary</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <!-- ==================== FAB STYLES ==================== -->

    <style name="Widget.Sakta.FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/surface_elevated_dark</item>
        <item name="tint">@color/text_primary</item>
        <item name="elevation">4dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Sakta.FAB</item>
    </style>

    <style name="Widget.Sakta.FAB.Mini" parent="Widget.Sakta.FAB">
        <item name="fabSize">mini</item>
    </style>

    <style name="Widget.Sakta.FAB.Primary" parent="Widget.Sakta.FAB">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="ShapeAppearance.Sakta.FAB" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerSize">16dp</item>
    </style>

    <!-- ==================== INPUT STYLES ==================== -->

    <style name="Widget.Sakta.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_border</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- ==================== BOTTOM NAVIGATION ==================== -->

    <style name="Widget.Sakta.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/bottom_nav_background</item>
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemTextColor">@color/bottom_nav_selector</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.Sakta.BottomNavigation.ActiveIndicator</item>
        <item name="elevation">0dp</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>
    </style>

    <style name="Widget.Sakta.BottomNavigation.ActiveIndicator" parent="">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <!-- ==================== BOTTOM SHEET ==================== -->

    <style name="Widget.Sakta.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">@color/surface_dark</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Sakta.BottomSheet</item>
    </style>

    <style name="ShapeAppearance.Sakta.BottomSheet" parent="ShapeAppearance.Material3.Corner.ExtraLarge">
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- ==================== TOOLBAR ==================== -->

    <style name="Widget.Sakta.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/background_dark</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="subtitleTextColor">@color/text_secondary</item>
        <item name="navigationIconTint">@color/text_primary</item>
    </style>

    <!-- ==================== CHIP ==================== -->

    <style name="Widget.Sakta.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/surface_elevated_dark</item>
        <item name="chipStrokeColor">@color/border</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">12dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="checkedIconTint">@color/primary</item>
    </style>

    <!-- ==================== LEGACY STYLES (for compatibility) ==================== -->

    <style name="TextAppearance.SafeWalk.Display" parent="TextAppearance.Sakta.Display" />
    <style name="TextAppearance.SafeWalk.Headline" parent="TextAppearance.Sakta.Headline" />
    <style name="TextAppearance.SafeWalk.Title" parent="TextAppearance.Sakta.Title" />
    <style name="TextAppearance.SafeWalk.TitleSmall" parent="TextAppearance.Sakta.TitleSmall" />
    <style name="TextAppearance.SafeWalk.Body" parent="TextAppearance.Sakta.Body" />
    <style name="TextAppearance.SafeWalk.BodySmall" parent="TextAppearance.Sakta.BodySmall" />
    <style name="TextAppearance.SafeWalk.Label" parent="TextAppearance.Sakta.Label" />
    <style name="TextAppearance.SafeWalk.Caption" parent="TextAppearance.Sakta.Caption" />
    <style name="Widget.SafeWalk.Button" parent="Widget.Sakta.Button" />
    <style name="Widget.SafeWalk.Button.Outlined" parent="Widget.Sakta.Button.Outlined" />
    <style name="Widget.SafeWalk.Button.Text" parent="Widget.Sakta.Button.Text" />
    <style name="Widget.SafeWalk.Card" parent="Widget.Sakta.Card" />
    <style name="Widget.SafeWalk.Card.Outlined" parent="Widget.Sakta.Card.Outlined" />
    <style name="Widget.SafeWalk.FAB" parent="Widget.Sakta.FAB" />
    <style name="Widget.SafeWalk.FAB.Secondary" parent="Widget.Sakta.FAB" />
    <style name="Widget.SafeWalk.TextInputLayout" parent="Widget.Sakta.TextInputLayout" />

</resources>
