<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Styles -->
    <style name="TextAppearance.SafeWalk.Display" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textSize">@dimen/text_display</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.SafeWalk.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.SafeWalk.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.SafeWalk.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">@dimen/text_title_small</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.SafeWalk.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.SafeWalk.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/text_body_small</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.SafeWalk.Label" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">@dimen/text_label</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.SafeWalk.Caption" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.SafeWalk.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">@dimen/button_height_large</item>
        <item name="cornerRadius">@dimen/radius_lg</item>
        <item name="android:textAppearance">@style/TextAppearance.SafeWalk.Body</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>

    <style name="Widget.SafeWalk.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">@dimen/button_height_large</item>
        <item name="cornerRadius">@dimen/radius_lg</item>
        <item name="android:textAppearance">@style/TextAppearance.SafeWalk.Body</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Widget.SafeWalk.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:minHeight">@dimen/button_height_large</item>
        <item name="android:textAppearance">@style/TextAppearance.SafeWalk.Body</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.SafeWalk.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/radius_xl</item>
        <item name="cardElevation">@dimen/elevation_sm</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="contentPadding">@dimen/spacing_lg</item>
    </style>

    <style name="Widget.SafeWalk.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">@dimen/radius_xl</item>
        <item name="strokeColor">@color/border</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="contentPadding">@dimen/spacing_lg</item>
    </style>

    <!-- FAB Styles -->
    <style name="Widget.SafeWalk.FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/text_on_primary</item>
        <item name="elevation">@dimen/elevation_lg</item>
    </style>

    <style name="Widget.SafeWalk.FAB.Secondary" parent="Widget.Material3.FloatingActionButton.Secondary">
        <item name="backgroundTint">@color/surface</item>
        <item name="tint">@color/primary</item>
        <item name="elevation">@dimen/elevation_md</item>
    </style>

    <!-- TextInputLayout Styles -->
    <style name="Widget.SafeWalk.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_lg</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_lg</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_lg</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_lg</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>
</resources>
