<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glow effect -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#4034C759"/>
            <size android:width="40dp" android:height="40dp"/>
        </shape>
    </item>
    <!-- Main circle -->
    <item android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="oval">
            <solid android:color="#34C759"/>
            <stroke android:width="2dp" android:color="#FFFFFF"/>
            <size android:width="28dp" android:height="28dp"/>
        </shape>
    </item>
    <!-- Center check mark area -->
    <item android:left="12dp" android:top="12dp" android:right="12dp" android:bottom="12dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/>
            <size android:width="16dp" android:height="16dp"/>
        </shape>
    </item>
</layer-list>
