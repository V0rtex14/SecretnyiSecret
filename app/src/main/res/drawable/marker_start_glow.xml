<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#405B4CFF"/>
            <size android:width="48dp" android:height="48dp"/>
        </shape>
    </item>
    <!-- Middle ring -->
    <item android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="#805B4CFF"/>
            <size android:width="32dp" android:height="32dp"/>
        </shape>
    </item>
    <!-- Inner circle -->
    <item android:left="14dp" android:top="14dp" android:right="14dp" android:bottom="14dp">
        <shape android:shape="oval">
            <solid android:color="#5B4CFF"/>
            <size android:width="20dp" android:height="20dp"/>
        </shape>
    </item>
    <!-- Center dot -->
    <item android:left="20dp" android:top="20dp" android:right="20dp" android:bottom="20dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/>
            <size android:width="8dp" android:height="8dp"/>
        </shape>
    </item>
</layer-list>
