<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer pulse ring -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#30FF6B8A"/>
            <size android:width="56dp" android:height="56dp"/>
        </shape>
    </item>
    <!-- Middle ring -->
    <item android:left="12dp" android:top="12dp" android:right="12dp" android:bottom="12dp">
        <shape android:shape="oval">
            <solid android:color="#60FF6B8A"/>
            <size android:width="32dp" android:height="32dp"/>
        </shape>
    </item>
    <!-- Inner circle with border -->
    <item android:left="18dp" android:top="18dp" android:right="18dp" android:bottom="18dp">
        <shape android:shape="oval">
            <solid android:color="#FF6B8A"/>
            <stroke android:width="3dp" android:color="#FFFFFF"/>
            <size android:width="20dp" android:height="20dp"/>
        </shape>
    </item>
</layer-list>
