<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fitsSystemWindows="true">

    <!-- Карта на весь экран -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Верхняя панель с профилем, фильтрами и AI -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingHorizontal="16dp">

        <!-- Заголовок и профиль -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Логотип и название -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Shield Icon -->
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_shield"
                    android:contentDescription="@null"
                    app:tint="@color/success" />

        <!-- AI Assistant -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAIAssistant"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_btn_speak_now"
                android:padding="12dp"
                android:contentDescription="AI Assistant"
                app:tint="#6B4EFF" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Фильтры -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFilter"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_filter"
                android:padding="12dp"
                android:contentDescription="Фильтры" />

            </LinearLayout>

            <!-- Профиль -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/primary"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_person"
                    android:padding="8dp"
                    app:tint="@color/white"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/profile" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Статус безопасности -->
        <LinearLayout
            android:id="@+id/safetyStatusBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_status_safe"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp">

            <View
                android:id="@+id/statusDot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/bg_circle_green" />

            <TextView
                android:id="@+id/txtSafetyStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/you_are_safe"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Кнопки справа (зум) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:orientation="vertical"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_zoom_buttons"
        android:padding="4dp">

        <ImageButton
            android:id="@+id/btnZoomIn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/zoom_in"
            android:src="@drawable/ic_add"
            app:tint="@color/text_primary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginHorizontal="8dp" />

        <ImageButton
            android:id="@+id/btnZoomOut"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/zoom_out"
            android:src="@drawable/ic_remove"
            app:tint="@color/text_primary" />

    </LinearLayout>

    <!-- Маркер "Ваше местоположение" -->
    <LinearLayout
        android:id="@+id/locationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_location"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:background="@drawable/bg_location_label"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp" />

    </LinearLayout>

    <!-- Нижняя панель с действиями -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_panel"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">

        <!-- Кнопки действий (Безопасный маршрут, Проводить домой) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:gravity="center">

            <!-- Безопасный маршрут -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnSafeRoute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/primary"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_route_safe"
                        app:tint="@color/white"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/safe_route"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textAlignment="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Проводить домой -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnEscortHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/accent_blue"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_shield"
                        app:tint="@color/white"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/escort_home"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textAlignment="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Карточка статуса текущей зоны -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardZoneStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/card_safe_bg"
            app:strokeColor="@color/card_safe_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <!-- Иконка галочки -->
                <ImageView
                    android:id="@+id/imgZoneIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/success"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtZoneTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_zone_safe"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtZoneSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/no_incidents"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- SOS Кнопка -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSos"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:text="@string/sos_emergency"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:icon="@drawable/ic_warning"
            app:iconGravity="textStart"
            app:iconSize="24dp"
            app:iconTint="@color/white"
            app:iconPadding="8dp"
            app:backgroundTint="@color/sos_red"
            app:cornerRadius="16dp"
            style="@style/Widget.Sakta.Button.SOS" />

        <!-- Нижняя навигация -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            app:elevation="0dp"
            app:itemIconTint="@color/bottom_nav_selector"
            app:itemTextColor="@color/bottom_nav_selector"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_navigation_menu"
            style="@style/Widget.Sakta.BottomNavigation" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>