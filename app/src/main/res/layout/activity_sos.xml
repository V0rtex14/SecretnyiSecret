<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sos_background">

    <!-- Toolbar -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_arrow_back"
            android:drawablePadding="4dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/emergency_situation"
            android:textColor="@color/sos_red"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center" />

        <View
            android:layout_width="48dp"
            android:layout_height="1dp" />

    </LinearLayout>

    <!-- Иконка тревоги -->
    <LinearLayout
        android:id="@+id/alarmIconContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgAlarm"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_alarm"
            android:background="@drawable/bg_sos_icon"
            android:padding="24dp"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/txtEmergencyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/emergency"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSosStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/sos_activated"
            android:textColor="@color/sos_red"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Карточка с информацией о местоположении -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLocationInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/sos_surface"
        app:strokeColor="@color/sos_red"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/alarmIconContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_location_sent"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtContactsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="• Доверенные контакты (3)"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="• Службы спасения"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Кнопки действий -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardLocationInfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <!-- Позвонить 102 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCall102"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/call_102"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAllCaps="false"
            app:icon="@drawable/ic_call"
            app:iconGravity="textStart"
            app:iconSize="24dp"
            app:iconTint="@color/white"
            app:iconPadding="8dp"
            app:backgroundTint="@color/success"
            app:cornerRadius="16dp" />

        <!-- Запись звука -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRecordAudio"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="@string/recording_audio"
            android:textColor="@color/sos_red"
            android:textSize="16sp"
            android:textAllCaps="false"
            app:icon="@drawable/ic_mic"
            app:iconGravity="textStart"
            app:iconSize="24dp"
            app:iconTint="@color/sos_red"
            app:iconPadding="8dp"
            app:backgroundTint="@color/white"
            app:cornerRadius="16dp" />

        <!-- Ложная тревога -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFalseAlarm"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="@string/false_alarm"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textAllCaps="false"
            style="@style/Widget.Sakta.Button.Outlined"
            app:strokeColor="@color/border"
            app:cornerRadius="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
