<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Заголовок с датой -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="01.01.2024 12:00"
                android:textSize="12sp"
                android:textColor="#999999" />

            <ImageButton
                android:id="@+id/btnFavorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/star_big_off"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Избранное"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_more"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Меню" />

        </LinearLayout>

        <!-- Маршрут -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Иконка откуда -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location"
                android:alpha="0.5" />

            <TextView
                android:id="@+id/txtFrom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Откуда"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Стрелка вниз -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="16dp"
            android:src="@android:drawable/arrow_down_float"
            android:layout_marginStart="0dp"
            android:alpha="0.3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Иконка куда -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location"
                android:tint="#6B4EFF" />

            <TextView
                android:id="@+id/txtTo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Куда"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Информация о маршруте -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <!-- Расстояние -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_route"
                    android:alpha="0.5" />

                <TextView
                    android:id="@+id/txtDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.5 км"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- Время -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    android:alpha="0.5" />

                <TextView
                    android:id="@+id/txtDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 мин"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- Безопасность -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_safe_place"
                    android:alpha="0.5" />

                <TextView
                    android:id="@+id/txtSafety"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.5"
                    android:textSize="12sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Тип маршрута -->
        <TextView
            android:id="@+id/txtRouteType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Безопасный маршрут"
            android:textSize="11sp"
            android:textColor="#6B4EFF"
            android:background="#F0EBFF"
            android:padding="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
