<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_md"
    app:cardCornerRadius="@dimen/radius_lg"
    style="@style/Widget.SafeWalk.Card.Outlined">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_md"
        android:gravity="center_vertical">

        <!-- Avatar -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/primary_container">

            <TextView
                android:id="@+id/txtAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.SafeWalk.Headline"
                android:textColor="@color/primary"
                tools:text="А" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_marginEnd="@dimen/spacing_md">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.SafeWalk.Body"
                android:textStyle="bold"
                tools:text="Айжан" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/spacing_xs">

                <ImageView
                    android:id="@+id/imgStatus"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@android:drawable/presence_online"
                    app:tint="@color/success"
                    android:contentDescription="Статус" />

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.SafeWalk.BodySmall"
                    android:layout_marginStart="@dimen/spacing_xs"
                    tools:text="В безопасной зоне" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnShowOnMap"
                android:layout_width="@dimen/icon_size_lg"
                android:layout_height="@dimen/icon_size_lg"
                android:src="@drawable/ic_location"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/primary"
                android:contentDescription="Показать на карте" />

            <ImageButton
                android:id="@+id/btnNotify"
                android:layout_width="@dimen/icon_size_lg"
                android:layout_height="@dimen/icon_size_lg"
                android:src="@drawable/ic_notification"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/text_secondary"
                android:layout_marginStart="@dimen/spacing_sm"
                android:contentDescription="Уведомить" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
