<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Разрешения для карты и геолокации -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- Для фоновой геолокации -->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- Для уведомлений -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Для вибрации (SOS) -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Для звонков -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- Для SMS -->
    <uses-permission android:name="android.permission.SEND_SMS" />

    <!-- Для Foreground Service (фоновое отслеживание) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SaktaHAHATHONV1"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Login Activity - Start Screen -->
        <activity
            android:name="com.example.saktahahathonv1.auth.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SaktaHAHATHONV1"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Register Activity -->
        <activity
            android:name="com.example.saktahahathonv1.auth.RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SaktaHAHATHONV1"
            android:windowSoftInputMode="adjustResize" />

        <!-- Main Activity -->
        <activity
            android:name="com.example.saktahahathonv1.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize" />

        <!-- SOS Activity -->
        <activity
            android:name="com.example.saktahahathonv1.sos.SosActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sakta.Emergency" />

        <!-- Safe Route Activity -->
        <activity
            android:name="com.example.saktahahathonv1.saferoute.SafeRouteActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SaktaHAHATHONV1" />

        <!-- Escort Mode Activity -->
        <activity
            android:name="com.example.saktahahathonv1.escort.EscortModeActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SaktaHAHATHONV1" />

        <!-- Tracking Activity -->
        <activity
            android:name="com.example.saktahahathonv1.tracking.TrackingActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SaktaHAHATHONV1" />

        <!-- History Activity -->
        <activity
            android:name="com.example.saktahahathonv1.history.HistoryActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SaktaHAHATHONV1" />

        <!-- Profile Activity -->
        <activity
            android:name="com.example.saktahahathonv1.profile.ProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SaktaHAHATHONV1" />

        <!-- Friends Activity (Legacy) -->
        <activity
            android:name="com.example.saktahahathonv1.friends.FriendsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SaktaHAHATHONV1" />

        <!-- Escort Activity (Legacy) -->
        <activity
            android:name="com.example.saktahahathonv1.escort.EscortActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SaktaHAHATHONV1" />

        <!-- Family Activity (Legacy) -->
        <activity
            android:name="com.example.saktahahathonv1.family.FamilyActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SaktaHAHATHONV1" />

        <!-- Location Service для режима сопровождения -->
        <service
            android:name="com.example.saktahahathonv1.location.LocationService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location" />

        <!-- Конфигурация OSMDroid -->
        <meta-data
            android:name="org.osmdroid.tileprovider.cachewriter.MAX_CACHE_SIZE_IN_BYTES"
            android:value="104857600" />

    </application>

</manifest>
